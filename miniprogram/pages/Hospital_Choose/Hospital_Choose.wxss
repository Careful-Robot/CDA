.container {
  display: flex;
  direction: row;
}

/* 左侧栏 */
.nav_left {
  position: absolute;
  display: inline-block;
  width: 25%;
  height: 100%;
  background: #F2F2F2;
  text-align: center;
  overflow: scroll;
}

/* 左侧栏list的item */
.nav_left .nav_left_items {
  height: 60rpx;
  line-height: 60rpx;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #dedede;
  font-size: 30rpx;
}

/* 左侧栏list的item被选中时 */
.nav_left .nav_left_items.active {
  background: #fff;
  color: red;
}

/* 右侧栏主盒子 */
.nav_right {
  position: absolute;
  top: 0;
  right: 0;
  flex: 1;
  width: 75%;
  height: 100%;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
  background: #fff;
  overflow: scroll;
}

.hospital {
  height: 150rpx;
  padding: 10rpx 10rpx 10rpx 20rpx;
  margin-bottom: 10rpx;
}

.hospital .navigator {
  display: flex;
}

.hospital_left {
  width: 60rpx;
  margin-right: 20rpx;
}

.hospital_right {
  width: 430rpx;
}

.hospital_right .hospital_name {
  width: 100%;
  padding: 10rpx 0;
  font-size: 30rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.hospital_right .address {
  height: 65rpx;
  font-size: 20rpx;
  color: #ccc;
}

.hospital_right .level {
  width: 50rpx;
  height: 30rpx;
  font-size: 18rpx;
  color: white;
  background-color: #39AE7A;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}