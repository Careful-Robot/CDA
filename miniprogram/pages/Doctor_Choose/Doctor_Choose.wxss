page {
  background-color: #F2F2F2;
}

.doctor_reservations {
  height: 423rpx;
  margin-bottom: 17rpx;
  background-color: white;
}

.doctor {
  height: 140rpx;
  padding: 20rpx 18rpx 20rpx 25rpx;
  display: flex;
  border-bottom: 1rpx solid #F5F5F5;
}

.doctor_left {
  width: 122rpx;
  margin-right: 40rpx;
}

.doctor_right {
  font-size: 25rpx;
}

.doctor_name {
  display: flex;
  margin-bottom: 15rpx;
}

.doctor_name .name {
  font-size: 30rpx;
  font-weight: bold;
  margin-right: 35rpx;
}

.doctor_name .level {
  font-size: 18rpx;
  color: #39AE7A;
  padding: 3rpx 8rpx;
  display: flex;
  align-items: center;
  border: 1rpx solid #39AE7A;
  border-radius: 15rpx;
}

.doctor_hospital {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.doctor_hospital .hospital {
  width: 460rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.doctor_hospital .department {
  margin-left: 22rpx;
}

.doctor_description {
  width: 530rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.reservations {
  height: 240rpx;
}

.dateBar {
  width: 100%;
  height: 80rpx;
  padding-left: 78rpx;
  display: flex;
}

.date {
  width: 96rpx;
  height: 100%;
  font-size: 22rpx;
  padding: 15rpx 0;
  text-align: center;
}