page {
  background-color: #F2F2F2;
}

.doctor_reservations {
  height: 423rpx;
  margin-bottom: 17rpx;
  background-color: white;
  z-index: 0;
}

.doctor {
  height: 140rpx;
  padding: 20rpx 18rpx 20rpx 25rpx;
  display: flex;
  border-bottom: 1rpx solid #F5F5F5;
}

.doctor_left {
  width: 122rpx;
  margin-right: 40rpx;
}

.doctor_right {
  font-size: 25rpx;
}

.doctor_name {
  display: flex;
  margin-bottom: 15rpx;
}

.doctor_name .name {
  font-size: 30rpx;
  font-weight: bold;
  margin-right: 35rpx;
}

.doctor_name .level {
  font-size: 18rpx;
  color: #39AE7A;
  padding: 3rpx 8rpx;
  display: flex;
  align-items: center;
  border: 1rpx solid #39AE7A;
  border-radius: 15rpx;
}

.doctor_hospital {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.doctor_hospital .hospital {
  width: 460rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.doctor_hospital .department {
  width: 120rpx;
  margin-left: 22rpx;
  text-align: center;
}

.doctor_description {
  width: 530rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.reservations {
  height: 240rpx;
  font-size: 23rpx;
  text-align: center
}

.dateBar {
  width: 100%;
  height: 80rpx;
  padding-left: 78rpx;
  display: flex;
  border-width: 0 0 1rpx 0;
  border-style: solid;
  border-color: #e2e2e2;
}

.date {
  width: 96rpx;
  height: 100%;
  padding: 15rpx 0;
}

.reservations .content {
  width: 100%;
  height: 80rpx;
  display: flex;
  border-width: 0 0 1rpx 0;
  border-style: solid;
  border-color: #e2e2e2;
}

.reservations .content .text {
  width: 78rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-width: 0 0 0 1rpx;
  border-style: solid;
  border-color: #e2e2e2;
}

.reservations .content .time_reservations,
.reservations .content .time_full {
  width: 95rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-width: 0 0 0 1rpx;
  border-style: solid;
  border-color: #e2e2e2;
}

.reservations .content .time_reservations {
  background-color: #ebf6f0;
  color: #39AE7A;
}

.reservations .content .time_full {
  color: #919191;
}

.confirm {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1;
}

.confirm .background {
  width: 522rpx;
  height: 632rpx;
  background-color: white;
  border-radius: 20rpx;
}

.confirm .background .title_background {
  width: 100%;
  height: 136rpx;
  border-radius: 0 0 100% 100%;
  background-color: #39AE7A;
  margin-bottom: 44rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.confirm .background .title_background .title {
  color: white;
  font-size: 30rpx;
  padding-bottom: 18rpx;
  border-bottom: 10rpx solid white;
  border-radius: 10rpx;
}

.confirm .background .body {
  width: 100%;
  height: 357rpx;
}

.confirm .background .body .style {
  font-size: 30rpx;
  text-align: center;
  margin-bottom: 36rpx;
}

.confirm .background .body .style .time_date {
  font-size: 40rpx;
  margin-right: 10rpx;
}

.confirm .background .body .hospital {
  padding: 0 20rpx;
}

.confirm .background .bottom {
  display: flex;
  justify-content: center;
  align-items: center;
}

.confirm .background .bottom .button {
  width: 180rpx;
  height: 60rpx;
  font-size: 30rpx;
  padding: 10rpx;
  margin: 0;
  border-radius: 50rpx;
  font-weight: normal;
  color: white;
}

.confirm .background .bottom .cacel_button {
  background-color: #d8d8d8;
  margin-right: 40rpx;
}

.confirm .background .bottom .confirm_button {
  background-color: #39AE7A;
}